## VC++ on Win32 ##
CC      = cl.exe /nologo
CFLAGS  = /O2 /W3 /MT /wd4819 /DWIN32 /D_CRT_SECURE_NO_DEPRECATE
LINK    = link.exe
LNFLAGS = -lib /out:
INC     = /I..\base /I..\mathematics /I..\fem

## Intel C compiler on Win32 ##
#CC      = icl.exe /nologo
#CFLAGS  = /O3 /G7 /W3 /ML /DWIN32
#LINK    = link.exe
#LNFLAGS = -lib /out:
#INC     = /I..\base /I..\mathematics /I..\fem


ALL_OBJ = \
  avs_field_utl.obj \
  bmp_utl.obj \
  dicom_utl.obj \
  graphic_binio.obj \
  graphic_utl.obj \
  tiff_utl.obj \
  voxel_utl.obj

all : $(ALL_OBJ) image.lib

image.lib : $(ALL_OBJ)
	$(LINK) $(LNFLAGS)$@ $(ALL_OBJ)

.c.obj :
	$(CC) $(CFLAGS) $(INC) -c $<

clean :
	del *.obj *.o *.lib *.a *~ *.bak

